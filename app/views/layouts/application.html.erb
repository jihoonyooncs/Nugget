<!DOCTYPE html>
<html>
<head>
	<%# image tag %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
	<title> Nugget </title>
	<%= favicon_link_tag %>
	<div class="pull-right">
		<%# if current_user %>
		<%#= link_to 'Profile', current_user %>
		<%#= link_to 'Log Out', logout_path, method: :delete %>
		<%# else %>
		<%#= link_to 'Log In', login_path %>
		<%#= link_to 'Sign Up', signup_path %>
		<%# end %>
	</div>

	<div id="wrapper">
	<header>
	<%= link_to image_tag("goldnugget.png", alt: "Nugget"), {:controller => 'posts', :action => 'index'}, :class => 'websiteLogo' %>
	<%= link_to 'NUGGET', {:controller => 'posts', :action => 'index'}, {:class => 'websiteTitle'} %>
	</header>
	
	<p>
	<nav id="horzNav", align = "center">
	<%= link_to 'All Posts', posts_path %>
	<% if(current_user) %>
	<%= link_to 'Subscribed Posts', subindex_path %>
	<%= link_to 'Friends', friends_path %>
	<%end%>
	<%= link_to 'Categories', posts_path %>
	<% if(current_user) %>
	<%= link_to 'Profile', @user %>
	<%= link_to 'Log Out', logout_path, method: :delete %>
	<% else %> 
	<%= link_to 'Log In', login_path %>
	<%= link_to 'Sign Up', signup_path %>
	<% end %>
	</p>
	</nav>


	<% if notice %>
	<div class="alert alert-success"><%= notice %></div>
	<% end %>
	<% if alert %>
	<div class="alert alert-danger"><%= alert %></div>
	<% end %>

	
	<main id="content">


	<%= yield %>
	
	</main>
	</div> <!-- END OF WRAPPER -->
</div>
</body>
</html>
